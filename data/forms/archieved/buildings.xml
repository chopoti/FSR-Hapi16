<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Buildings</h:title>
    <model>
      <instance>
        <buildings id="buildings">
          <start/>
          <end/>
          <today/>
          <deviceid/>
          <phonenumber/>
          <title/>
          <osm_building/>
          <form_completed/>
          <meta>
            <instanceID/>
          </meta>
        </buildings>
      </instance>
      <bind jr:preload="timestamp" jr:preloadParams="start" nodeset="/buildings/start" type="dateTime"/>
      <bind jr:preload="timestamp" jr:preloadParams="end" nodeset="/buildings/end" type="dateTime"/>
      <bind jr:preload="date" jr:preloadParams="today" nodeset="/buildings/today" type="date"/>
      <bind jr:preload="property" jr:preloadParams="deviceid" nodeset="/buildings/deviceid" type="string"/>
      <bind jr:preload="property" jr:preloadParams="phonenumber" nodeset="/buildings/phonenumber" type="string"/>
      <bind nodeset="/buildings/title" readonly="true()" type="string"/>
      <bind nodeset="/buildings/osm_building" required="true()" type="binary"/>
      <bind jr:preload="timestamp" jr:preloadParams="end" nodeset="/buildings/form_completed" type="dateTime"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/buildings/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <input ref="/buildings/title">
      <label>Buildings</label>
      <hint>This is a generic buildings survey.</hint>
    </input>
